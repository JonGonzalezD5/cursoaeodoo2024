<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport_issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="date" optional="show" />
                <field name="user_id" optional="hide" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                    
                    <button name="action_draft" invisible="state in ('draft')" string="Draft" type="object" class="btn-primary"/>
                    <button name="action_open" invisible="state not in ('draft')" string="Open Issue" type="object" class="btn-secondary"/>
                    <button name="action_done" invisible="state in ('done')" string="Close Issue" type="object" class="btn-success"/>
                    
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" />
                            <field name="clinic_id" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="assistance" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>

</odoo>